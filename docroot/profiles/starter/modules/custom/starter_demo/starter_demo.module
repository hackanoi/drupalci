/**
 * Implements hook_block_info().
 */
function starter_demo_block_info() {
  $blocks['starter_demo'] = array(
    'info' => t('Example block'),
    'cache' => DRUPAL_NO_CACHE
  );

  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function starter_demo_block_view($delta = '') {
  $block = array();

  switch ($delta) {
    case 'starter_demo':
      global $user;
      $name = $user->uid ? $user->name : 'Anonymous';
      $block['subject'] = t('Drupal CI');
      $block['content'] = t('<p>Hi @name! This is example block content</p>', array('@name' => $name));
      break;

  }
  return $block;
}
